@model Nullable<DateTime>
@if ( Model.HasValue )
{
    @Html.TextBox("", String.Format("{0:dd.MM.yyyy}", Model.Value), new { @class = "DateFormat", title = "format dd.mm.yyyy" })
    
}
else
{
    @Html.TextBox("", String.Format("{0:dd.MM.yyyy}", DateTime.Now), new { @class = "DateFormat", title = "format dd.mm.yyyy" }) 
}