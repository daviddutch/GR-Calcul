@model GR_Calcul.Models.Room

@{
    ViewBag.Title = "Supprimer une salle";
}

<h2>@ViewBag.Title</h2>

<h3>Êtes-vous sûr de vouloir supprimer cette salle?</h3>
<fieldset>
    <legend>Salle</legend>

    <p><b>Name : </b>@Model.Name</p>

</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Supprimer" /> |
        @Html.ActionLink("Retour à la liste", "Index")
    </p>
}


